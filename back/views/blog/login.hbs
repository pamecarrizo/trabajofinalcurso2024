<link rel="stylesheet" href="/stylesheets/style.css" />
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
/>

<div class="container-login" style="margin-top:10vh">

  <div class="row">
    <h3> Para participar del blog tienes que iniciar sesion:</h3>
    <form action="/blog/login" method="post">
      <div class="mb-3 row">
        <p>Usuario:</p>
        <div class="col-sm-10">
          <input
            type="text"
            class="form-control"
            id="inputUser"
            name="usuario"
          />
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-10">
          <p>Contraseña:</p>
          <input
            type="password"
            class="form-control"
            id="inputPassword"
            name="password"
          />
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Ingresar</button>
    </form>
    {{#if error}}
      <p>Usuario y/o Contraseña incorrectos.</p>
    {{/if}}
  </div>
</div>